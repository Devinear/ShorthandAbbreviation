<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/abbreviation_list_item_height" >
    <!--INDEX-->
    <TextView
        android:id="@+id/table_row_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:textSize="@dimen/table_row_text_size" />
    <!--초성-->
    <TextView
        android:id="@+id/table_row_initial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:textSize="@dimen/table_row_text_size" />
    <!--중성-->
    <TextView
        android:id="@+id/table_row_middle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:textSize="@dimen/table_row_text_size" />
    <!--종성-->
    <TextView
        android:id="@+id/table_row_final"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:textSize="@dimen/table_row_text_size" />
    <!--숫자-->
    <TextView
        android:id="@+id/table_row_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:textSize="@dimen/table_row_text_size" />
    <!--약어내용-->
    <TextView
        android:id="@+id/table_row_contents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:textSize="@dimen/table_row_text_size" />
</LinearLayout>
